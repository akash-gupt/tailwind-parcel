{
  "name": "tailwind-parcel",
  "private": true,
  "scripts": {
    "start": "npm-run-all clean parcel parcel:dev",
    "parcel": "parcel ./src/app/**/*.html --open --log-level 3",
    "parcel:dev": "parcel watch ./src/app/**/*.html --log-level 3",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5",
    "postcss-import": "^12.0.1"
  },
  "dependencies": {
    "tailwindcss": "^1.3.5"
  }
}
